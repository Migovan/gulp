.information
	max-width 985px
	margin auto
	background #ffffff
	height 2087px

.information__main-text-second-mobile
	display none

.information__statistic
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	width 823px
	margin auto

.information__number
	font-family 'Oswald' sans-serif
	font-size 7.5em
	font-weight 200
	line-height 0.48
	margin-bottom 55px

.information__text	
	font-family 'PT Sans' sans-serif
	font-size 1.0625em
	line-height 1.47

.information__map
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	margin auto
	min-height 500px
	width 984px

.information .information__main-text
	margin-left 8%
	p
		font-family 'Oswald' sans-serif
		font-size 2.625em
		font-weight 300
		font-style italic
	article
		font-family 'PT Sans' sans-serif
		font-size 1.0625em
		line-height 1.47

.information__communications-dns
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	margin auto
	div
		display flex
		flex-direction column
		align-items center
		div
			p
				font-family 'PT Sans' sans-serif
				font-size 1.0625em

.information__paragraph
	margin-top 50px
	margin-bottom -20px

.information__border-left
	border-top solid 0.5px
	border-right solid 
	border-color #e8e8e8
	width 50%
	height 456px
	justify-content center

.information__border-right
	border-top solid 0.5px
	border-color #e8e8e8
	width 50%
	height 456px
	justify-content center

.information__image-maintain
	background-image url(./img/maintain.png)
	background-repeat no-repeat
	background-position bottom 
	max-width 985px

.information__main-text-second
	height 456.45px
	width 90%
	margin auto
	display flex
	flex-direction column
	justify-content space-around
	p
		font-family 'Oswald' sans-serif
		font-size 2em
		font-weight 300
		font-style italic
		line-height 1.78
		color  #ffffff
	article
		font-family 'PT Sans' sans-serif
		font-size 1.0625em
		color #ffffff
		line-height 1.47
		width 47%
	button
		background-color transparent
		width 117px
		height 30px
		border-radius 3px
		border solid 1px rgba(255, 255, 255, 0.28);
		font-family 'PT Sans' sans-serif
		font-size 1.0625em
		line-height 1.47
		cursor pointer
		&:hover
			background rgba(255, 255, 255, 0.2)
		color #ffffff
	
.information__result	
	display flex
	flex-direction column
	justify-content space-around
	align-items center
	height 456px
	background #f6f6ee
	width 100%

.information__arrow-percentages
	display flex
	flex-direction row
	justify-content space-between
	align-items baseline
	img 
		width 44px
		height 32px

.information__one-word
	font-family 'PT Sans' sans-serif
	font-size 1.0625em
	color rgba(0, 0, 0, 0.64)

.information__percentages
	font-family 'Oswald' sans-serif
	font-size 7.5em
	font-weight 200
	line-height 0.48
	margin 0

.information__two-paragraphs
	font-family 'Oswald' sans-serif
	font-size 2.625em
	font-weight 300
	font-style italic
	display flex
	flex-direction column
	align-items center
	margin-bottom 30px
	p
		margin 0