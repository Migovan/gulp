@import 'img.styl'

body 
	margin 0
	padding 0
	font-size 16px

header
	max-width 1258px
	height 285px	
	display flex
	flex-direction row
	justify-content space-between
	align-items: center;
	margin-left auto
	margin-right auto 
	img 
		width: 318px
		height: 120px
			
.header__info
	margin-left 160px
	margin-top -15px
	color #7b7b7b
	font-family 'PT Sans' sans-serif
	font-size 1em

.header__content_right
	margin-top -17px

.header__number
	font-family 'PT Sans' sans-serif
	font-weight bold
	font-size 1.625em
	margin-bottom 12px

.header__button	
	width 140px
	height 40px
	border solid 1px
	border-radius 5px
	background white
	color #3e7af3

.main-content
	margin-left auto
	margin-right auto 
	width 75.5%
	h1 
		font-family 'Oswald' sans-serif
		font-size 70px
		font-weight 300
		font-style italic
		line-height 1.09
		color #ffffff

.main-content__big-image	
	max-width 1440px
	height 1104px
	position absolute

.main-content__mask-big
	position relative
	top 595px
	height 509px
	max-width 1440px

.main-content__text
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	position relative
	width 985px
	margin auto
	margin-top 290px

.main-content__rigth	
	background-color #ffc800
	width 223px
	height 64px
	color #814514
	text-align end
	h2
		font-family sans
		font-size 1.5em
		margin-right: 10px;
		margin-top: 12px;
		


.main-content__cafe
	font-size 0.7em
	font-weight bold
	margin-right: 10px;
	position relative
	top 15px	

.main-content__name
	font-size 1.0625em
	font-family 'PT Sans' sans-serif
	font-weight bold
	color #ffffff
	margin-bottom: -12px;

.main-content__post
	font-size 0.9em
	font-family sans
	color #ffffff

.container
	max-width 1440px
	margin auto
	height 1000px
	background #e8e8e8

.information
	max-width 985px
	margin auto
	height 700px
	background #ffffff
	position relative
