@import 'img.styl'

body 
	margin 0
	padding 0
	font-size 16px

.header
	width 70%
	height 285px
	display flex
	flex-direction row
	justify-content space-between
	align-items: center;
	margin-left auto
	margin-right auto 
	img 
		width: 318px
		height: 120px
			
.header__info
	margin-left 160px
	margin-top -15px
	color #7b7b7b
	font-family PTSans, sans-serif		
	font-size 1em		

.header__number
	font-family PTSans, sans-serif	
	font-size 1.625em
	font-weight bold
	margin-bottom 12px

.header__button	
	width 140px
	height 40px
	border solid 1px
	border-radius 5px
	background white
	color #3e7af3

.big-image
	width 100%
	margin-left auto
	margin-right auto 

