@media screen and (max-width: 980px)
	.header-mobile
		display flex
		flex-direction row
		justify-content space-around
		align-items center
		background-color #47485f
		height 60px
		min-width 320px
		.header-mobile__menu
			width 25px
			height 15px
		.header-mobile__logo-white
			width 89px
			height 46px
		.header-mobile__telephone
			width 21.6px
			height 22px
	header
		display none
	
	.main-content
		margin-left auto
		margin-right auto 
		min-width 320px
		h1 
			font-family 'Oswald' sans-serif
			font-size 70px
			font-weight 300
			font-style italic
			line-height 1.09
			color #ffffff

	.main-content__big-image	
		position absolute

	.main-content__mask-big
		position relative
		top 595px
		height 509px
		max-width 1440px

	.main-content__text
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		position relative
