@media screen and (max-width: 980px)
	.header-mobile
		background-color #47485f
		height 60px
		min-width 320px
		.header-mobile__menu
			width 25px
			height 15px
		.header-mobile__logo-white
			width 89px
			height 46px
		.header-mobile__telephone
			width 21.6px
			height 22px
		div
			width 90%
			height 60px	
			display flex
			flex-direction row
			justify-content space-between
			align-items center
			margin auto
	header
		display none
	.main-content
		margin-left auto
		margin-right auto 
		max-width 1440px
		height 1104px
		background-image url(./img/mask-big.png), url(./img/big-image.png)
		background-repeat no-repeat
		background-position bottom 
		position relative
		h1 
			font-family 'Oswald' sans-serif
			font-size 2.5em
			font-weight 300
			font-style italic
			line-height 1.1
			color #ffffff

	.main-content__text
		display none

	.main-content__text_mobile
		display flex
		flex-direction column
		position absolute
		left 15.8%
		top 850px

	.main-content__post
		font-size 2.0625em
		font-weight bold