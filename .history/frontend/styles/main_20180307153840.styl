@import 'img.styl'

body 
	margin 0
	padding 0
	font-size 16px

.header
	width 70%
	height 285px	
	display flex
	flex-direction row
	justify-content space-between
	align-items: center;
	margin-left auto
	margin-right auto 
	img 
		width: 318px
		height: 120px
			
.header__info
	margin-left 160px
	margin-top -15px
	color #7b7b7b
	font-family PTSans, sans-serif		
	font-size 1em		

.header__content_right
	margin-top -17px

.header__number
	font-family PTSans, sans-serif	
	font-size 1.625em
	font-weight bold
	margin-bottom 12px

.header__button	
	width 140px
	height 40px
	border solid 1px
	border-radius 5px
	background white
	color #3e7af3

.main-content
	margin-left auto
	margin-right auto 
	width 75.5%
	h1 
		font-family 'Oswald' sans-serif
		font-size 70px
		font-weight 300
		font-style italic
		line-height 1.09
		color #ffffff
		position absolute

.main-content__big-image	
	width 1440px
	height 1104px
	position absolute

.main-content__mask-big
	position relative
	top 595px
	height 509px
	width 1440px

.main-content__text
	display flex
	flex-direction row
	justify-content space-between
	position relative